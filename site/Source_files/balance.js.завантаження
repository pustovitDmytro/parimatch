$('document').ready(function(){setHolderPlace();$(window).bind('resize',function(){setHolderPlace()})
$('#balance-button').click(function(){getAccBalance()})});function setHolderPlace(){$bb=$('#balance-button');$bh=$('#balance-holder');offset=$bb.offset();if(offset){$bh.css('top',offset.top+ 11+ $bb.height());$bh.css('left',offset.left+($bb.width()/2) - ($bh.width()/2));}}
function getAccBalance(){url='/account_balance.html';$bh=$('#balance-holder');$div=$bh.find('div');$stp=$div.find('li#stp');$stp.hide();$bh.height(60);if($bh.is(':visible')){$bh.toggle('slide',{direction:"up"},300);}else{$img=$bh.find('img#wait');$bh.toggle('slide',{direction:"up"},300);$div.hide();$img.show();$.get(url,function(data,textStatus){try{var r=eval('('+ data+')');}catch(e){;};if(typeof(r)=="object"){$div.find('#ros').text(r.ros);$div.find('#ronc').text(r.ronc);if(r.sts==1){$bh.height(90);$stp.show();$div.find('#cc').text(r.cc);$div.find('#as').text(r.as);}
$img.hide();$div.show();};});}}