$('document').ready(function()
{if(0==$('#makeBet caption span.drag-switcher').length)
{$('#makeBet caption').prepend('<span class="drag-switcher"></span>');}
$('#makeBet caption span.drag-switcher').click(function(){var $el=$('#makeBet');$el.toggleClass('ui-draggable').toggleClass('enabled');if($el.hasClass('ui-draggable'))
{$el.draggable();$el.draggable('enable');$('#click1').addClass('click1Narrow');}
else
{$el.draggable('disable');$('#click1').removeClass('click1Narrow');}})
$('#z_contentw table.dt a.om').click(function(){return toggleMatch(this);});});$('document').ready(function()
{BindTooltips();$('#click1Sum').jec({acceptedKeys:[{min:48,max:57},44,46],maxLength:7,blinkingCursor:true,blinkingCursorInterval:500});$('#click1Sum').on('keyup',function(){if(!(/^\d*[.,]?\d{0,2}$/.test($('#click1Sum').jecValue()))){$('#click1Sum').jecValue(oldValue);}
oldValue=$('#click1Sum').jecValue();});$("#click1Help").tooltip({showURL:false,extraClass:"click1",fixPNG:true,delay:500});});function click1Click(obj){if(obj.checked){$('#click1Combo').show('slide');}else{$('#click1Combo').hide('slide');}}
function BindTooltips(){$('th','.dt').tooltip();$('a.om').tooltip();$('td u').tooltip({extraClass:"max rc-3px",delay:500});}