$(document).ready(function(){BindMatchInfo();});function BindMatchInfo(){$('span.ieffect').click(function(e){var divName='#d'+$(this).attr('id').substr(1);if($(divName).is(':visible')){$(divName).hide();}else{$(".effect").hide();var offset=$(this).offset();var offsetParent=$("#z_contentw").offset();var imgWidth=$(this).width();var imgHeight=$(this).height();var divHeight=$(divName).height();leftVal=offset.left- offsetParent.left+ imgWidth+ 10+"px";topVal=offset.top- offsetParent.top-(divHeight/2)+"px";$(divName).css({left:leftVal,top:topVal}).show('slide');$(document).keydown(function(e){if(e.keyCode==27){if($('.effect').is(':visible')){$('.effect').hide();}}});}}).mouseleave(function(e){var divName='#d'+$(this).attr('id').substr(1);$(divName).hide();}).tooltip({});}